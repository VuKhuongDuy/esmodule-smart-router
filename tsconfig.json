{
  "compilerOptions": {
    "target": "es6",                          
    "module": "ESNext",                    
    "lib": ["DOM", "DOM.Iterable", "ESNext"],            
    "skipLibCheck": true,
    "allowJs": false,
    "outDir": "dist",                          
    "rootDir": "src",
    "strict": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "next.config.js"
  ],
  "types": ["node", "jest", "@testing-library/jest-dom"],
	"exclude": ["node_modules"],
}